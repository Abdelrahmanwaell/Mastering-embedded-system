#include <stdio.h>

int factorial(int n)
{
	while(n!=1)
	{
		return n*factorial(n-1);
	}
return 1;
}

void main(void)
{int number;
 printf("enter an Integer: ");
 fflush(stdout);
 scanf("%d",&number);
 printf("\nFactorial of %d = %d ",number,factorial(number));
}
