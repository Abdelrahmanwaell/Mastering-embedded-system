#include <stdio.h>

void reverse()
{
	char c;
	fflush(stdout);
	scanf("%c",&c);
	if (c!="\n")
	{
		reverse();
		printf("%c",c);
	}
}
void main(void)
{
printf("enter a sentence\n");
reverse();

}
