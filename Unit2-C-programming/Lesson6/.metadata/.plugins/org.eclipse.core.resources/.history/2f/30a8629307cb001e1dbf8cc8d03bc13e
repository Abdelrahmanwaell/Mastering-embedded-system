#include <stdio.h>
#include <stdlib.h>
struct SAdd{
	int feet;
	float inch;

}d1,d2,sum;
int main(void)
{
	printf("Enter info for 1st distance:\n");
    printf("Enter feet :");
    fflush(stdout);
    scanf("%d",&d1.feet);
    printf("Enter inch :");
    fflush(stdout);
    scanf("%f",&d1.inch);
	printf("Enter info for 2nd distance:\n");
    printf("Enter feet :");
    fflush(stdout);
    scanf("%d",&d2.feet);
    printf("Enter inch :");
    fflush(stdout);
    scanf("%f12",&d2.inch);
    sum.feet=d1.feet+d2.feet;
    sum.inch=d1.inch+d2.inch;
    if(sum.inch>12)
    {
    	sum.inch-=12;
    	sum.feet++;
    }
    printf("sum of distance=%d'-%f",sum.feet,sum.inch);
}
