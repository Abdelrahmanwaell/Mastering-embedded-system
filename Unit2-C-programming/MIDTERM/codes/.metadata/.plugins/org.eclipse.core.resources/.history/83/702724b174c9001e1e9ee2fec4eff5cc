#include <stdio.h>
#include<string.h>
void reverse_string(char arr[]);
int main(void)
{
char a[]="Mohamed gamal";
reverse_string(a);
}
void reverse_string(char arr[])
{   printf("input: %s >> output: ",arr);
	int i,space;
	for(i=0;i<strlen(arr);i++)
	{
		if(arr[i]==" ")
			space=i;
	}
	for(i=space;i<strlen(arr);i++)
	{
		printf("%c",arr[space]);
	}

}
